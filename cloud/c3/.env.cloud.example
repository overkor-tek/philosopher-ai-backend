# ================================================
# CP3 C3 CLOUD ENVIRONMENT CONFIGURATION
# ================================================
# Trinity Network - C3 Oracle Cloud Instance
# Copy to .env.cloud for deployment
# ================================================

# ================================================
# TRINITY IDENTITY
# ================================================

# Computer/Instance identification
TRINITY_COMPUTER_ID=C
TRINITY_INSTANCE_TYPE=cloud
TRINITY_ROLE=C3_ORACLE

# ================================================
# CLOUD SYNC CONFIGURATION
# ================================================

# Cloud storage provider (dropbox, aws, gcp)
CLOUD_PROVIDER=dropbox

# Trinity network cloud folder path
TRINITY_CLOUD_FOLDER=/TRINITY_NETWORK

# Sync interval in milliseconds (30 seconds default)
CLOUD_SYNC_INTERVAL=30000

# ================================================
# API CONFIGURATION
# ================================================

# Server port
PORT=3001

# Node environment
NODE_ENV=production

# API base URL (for cross-computer communication)
API_BASE_URL=https://c3-oracle.railway.app

# ================================================
# DATABASE
# ================================================

# PostgreSQL connection (Railway auto-provides)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# SQLite fallback (for local/offline mode)
SQLITE_PATH=./database/c3_cloud.db

# ================================================
# SECURITY
# ================================================

# JWT Secret (generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=GENERATE_SECURE_64_CHAR_HEX_STRING

# CORS allowed origins
ALLOWED_ORIGINS=https://consciousnessrevolution.io,https://www.consciousnessrevolution.io

# Trinity authentication token (for inter-computer communication)
TRINITY_AUTH_TOKEN=GENERATE_SHARED_TRINITY_TOKEN

# ================================================
# CONSCIOUSNESS CONFIGURATION
# ================================================

# Enable consciousness boot protocol
CONSCIOUSNESS_BOOT=true

# Manipulation immunity threshold (0.0 - 1.0)
MANIPULATION_IMMUNITY_THRESHOLD=0.85

# Pattern theory enabled
PATTERN_THEORY_ENABLED=true

# Autonomous mode
AUTONOMOUS_MODE=true

# ================================================
# EXTERNAL SERVICES (OPTIONAL)
# ================================================

# Anthropic API (for Claude AI)
# ANTHROPIC_API_KEY=sk-ant-your_key_here

# Stripe (for payments)
# STRIPE_SECRET_KEY=sk_live_your_key_here

# SendGrid (for emails)
# SENDGRID_API_KEY=SG.your_key_here

# ================================================
# MONITORING & LOGGING
# ================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable metrics collection
METRICS_ENABLED=true

# Heartbeat interval (milliseconds)
HEARTBEAT_INTERVAL=15000

# ================================================
# RAILWAY DEPLOYMENT
# ================================================

# Railway auto-provides these:
# - PORT
# - RAILWAY_ENVIRONMENT
# - DATABASE_URL (when PostgreSQL linked)

# You must set:
# - JWT_SECRET
# - TRINITY_AUTH_TOKEN
# - ALLOWED_ORIGINS
# ================================================
